{
  "name": "web-components",
  "version": "1.0.0",
  "description": "Web Components",
  "main": "index.js",
  "scripts": {
    "start": "run-p build:watch build:stencil serve",
    "build:watch": "rollup -c -w",
    "build:stencil": "stencil build --dev --watch",
    "serve": "serve public"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.6.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^1.26.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "serve": "^11.2.0",
    "svelte": "^3.12.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js, jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@stencil/core": "^1.7.5",
    "modern-css-reset": "^1.0.4"
  }
}
